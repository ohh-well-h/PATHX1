  "interactionStates": {
    "button": {
      "default": {
        "scale": 1,
        "opacity": 1
      },
      "hover": {
        "scale": 1.02,
        "opacity": 0.9,
        "transition": "200ms ease"
      },
      "pressed": {
        "scale": 0.98,
        "opacity": 0.8,
        "transition": "100ms ease"
      }
    },
    "card": {
      "default": {
        "scale": 1,
        "shadow": "medium"
      },
      "hover": {
        "scale": 1.02,
        "shadow": "large",
        "transition": "250ms ease-out"
      }
    },
    "checkbox": {
      "unchecked": {
        "background": "transparent",
        "border": "2px solid #FFFFFF"
      },
      "checked": {
        "background": "#FFFFFF",
        "icon": "checkmark",
        "animation": "scale bounce"
      }
    }
  },
  "animations": {
    "pageTransition": {
      "duration": "400ms",
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
      "type": "slide and fade"
    },
    "cardReveal": {
      "duration": "300ms",
      "easing": "ease-out",
      "type": "fade up",
      "stagger": "100ms"
    },
    "buttonPress": {
      "duration": "150ms",
      "easing": "ease-in-out",
      "type": "scale"
    },
    "checkboxCheck": {
      "duration": "200ms",
      "easing": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
      "type": "scale bounce"
    }
  },
